var tabGroup = Ti.UI.createTabGroup();

var tab1 = Titanium.UI.createTab({  
    icon:'KS_nav_views.png',
    title:'Tab 1',
    window:profiles
});

var tab2 = Titanium.UI.createTab({  
    icon:'KS_nav_ui.png',
    title:'Tab 2',
    window:createProfiles
});

var tableData = Ti.UI.createTableView({
	backgroundColor: "#fff",
});


var peopleTbl = function(peopleData){
	var dataTable = [];
	for (i in peopleData){
		var tblRows = Ti.UI.createTableViewRow({
			id: peopleData[i].id,
			height: 60,
		});
		var tblView = Ti.UI.createView({
		});
		
		var nameLabel = Ti.UI.createLabel({
			text: peopleData[i].name,
			font: {fontSize: 18, fontFamily: "Helvetica", fontWeight: "light"},
		});
		
		var userNameLabel = Ti.UI.createLabel({
			text: peopleData[i].userName,
			font: {fontSize: 18, fontFamily: "Helvetica", fontWeight: "light"},
		});
		
		tblView.add(nameLabel, userNameLabel);
		tblRows.add(tbleView);
		dataTable.push(tblRows);
	};
	tableData.setData(dataTable);
};

exports.tableData = tableData;
exports.peopleTbl = peopleTbl;

exports.nameLabel = Ti.UI.createLabel({
	text: "Name",
	font: {fontSize: 18},
	left: 15,
	top: 30,
	textAlign: "left",
});

exports.nameField = Titanium.UI.createTextArea({
	color: "#01b4ff",
	top: 90,
	height:50,
	width:"240",
});

exports.userNameLabel = Ti.UI.createLabel({
	text: "Description",
	font: {fontSize: 18},
	left: 15,
	top: 30,
	textAlign: "left",
});

exports.userNameField = Titanium.UI.createTextArea({
	color: "#01b4ff",
	top: 150,
	height:50,
	width:"240",
	borderStyle:Titanium.UI.INPUT_BORDERSTYLE_ROUNDED,
	hintText:"username", 
});


exports.button = Ti.UI.createButton({
	title: "Add Profile",
	height: 30,
	top: 30,
	left: 15,
	right:15,
	backgroundColor: "#f3f3f3",
});

tabGroup.addTab(tab1);
tabGroup.addTab(tab2);

tabGroup.open();

exports.tab1 = tab1;
exports.tab2 = tab2;
exports.tabGroup =tabGroup;

